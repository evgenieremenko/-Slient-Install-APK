<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_exit_dialog">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_50px"
            android:layout_marginLeft="@dimen/dimen_50px"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dimen_130px"
                android:layout_height="@dimen/dimen_50px"
                android:background="@drawable/logo"
                android:scaleType="fitXY"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_30px"
                android:text="BrowserApp"
                android:textColor="@android:color/white"
                android:textSize="@dimen/dimen_40px"
                android:textStyle="bold"/>

        </LinearLayout>

        <TextView
            android:id="@+id/ID_TXTVIEW_MESSAGE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/dimen_35px"
            android:textStyle="normal"
            android:text="Press OK to install APK"
            android:layout_marginTop="@dimen/dimen_20px"
            android:layout_marginLeft="@dimen/dimen_20px"
            android:layout_marginRight="@dimen/dimen_20px"
            android:layout_marginBottom="@dimen/dimen_50px"/>


        <Button
            android:id="@+id/ID_BTN_OK"
            android:layout_width="@dimen/dimen_180px"
            android:layout_height="@dimen/dimen_60px"
            android:background="@drawable/select_dialog_button"
            android:textColor="#60B8D8"
            android:textStyle="normal"
            android:focusable="true"
            android:focusedByDefault="true"
            android:focusableInTouchMode="true"
            android:textSize="@dimen/dimen_30px"
            android:text="OK"
            android:layout_marginBottom="@dimen/dimen_20px"
            android:layout_gravity="center"/>

    </LinearLayout>

</RelativeLayout>